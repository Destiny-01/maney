<p id="notice"><%= notice %></p>

<h1>Codes</h1>

<%if user_signed_in?%>
<% HardWorker.perform_at(168.hours.from_now) %>
<% end %>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @codes.each do |code| %>
        <tr>
            <td><%= code.title %></td>
            <td><%= code.body %></td>
            <td><%= link_to 'Show', code %></td>
            <td><%= link_to 'Edit', edit_code_path(code) %></td>
            <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>